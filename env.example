# MySQL MCP Server Configuration

# Server Configuration
MCP_SERVER_NAME=mysql-monitor
MCP_SERVER_VERSION=1.0.0
LOG_LEVEL=info

# MySQL Connection Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=your_database

# Multiple Connections Configuration (JSON format)
MYSQL_CONNECTIONS={"connections":{"dev":{"host":"localhost","port":3306,"user":"dev_user","password":"dev_password","database":"dev_db","description":"Development Database"},"prod":{"host":"prod-server","port":3306,"user":"prod_user","password":"prod_password","database":"prod_db","description":"Production Database"}},"defaultConnection":"dev"}

# Security Configuration
SENSITIVE_TABLES=users,accounts,payments,transactions
AUDIT_ENABLED=true
SECURITY_VALIDATION=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=300000
SCHEMA_CHECK_INTERVAL=600000
PERFORMANCE_CHECK_INTERVAL=300000

# Alert Thresholds
TABLESPACE_USAGE_THRESHOLD=80
CONNECTION_THRESHOLD=100
PERFORMANCE_THRESHOLD=1000




